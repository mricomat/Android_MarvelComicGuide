<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="WhiteOverflow" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ItemTitleName" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowRadius">3.0</item>
    </style>

    <style name="ComicsRecyclerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="TextTitle_Character_Red" parent="TextCharacters">
        <item name="android:textColor">@color/red_tomato</item>
    </style>

    <style name="Text_Detail_White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextCharacters">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
